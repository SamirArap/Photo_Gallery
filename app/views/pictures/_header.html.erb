<header>
	<div class="container">
		<div class="row">
			<div class="col-md-1"><%= link_to image_tag("ruby_rails.png", size: '60x60'), root_path %></div>
			<div class="col-md-5"> My photo gallery 
				<p><% if @pictures %>
					<%= pluralize(@pictures.size, 'title')%> find 
					<%end%>
				</p></div>

			
				<form class="search" role="search">
					<%= form_tag(@picture, :method => 'get') do %>
						
						<div class="col-md-4">
							<%= text_field_tag('search', params[:search], :class => "form-control")%></div>
						<div class="col-md-2">
							<%= submit_tag("Search", :class => 'btn btn-default')%>
						</div>
						
					<%end%>
			    </form> 			
		</div>
 
    <p>
    	<%= render(:partial => 'pictures/navbar')%>
    </p>
    <p id="notice"><%= notice %></p> 
  </div>
</header>  
  