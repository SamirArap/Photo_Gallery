<div class="container">
	<div class="jumbotron">
		<h2>Editing Picture</h2>
		
		<%= form_for @picture do |f|%>
			<%= render(:partial => 'form', :locals => {:f => f}) %>
				<% if @picture.user == @current_email %>
					<div class="row">
						<div class="col-md-2"></div>				
						<div class="col-md-10"><%= f.submit "Edit params", :class => 'btn btn-block' %></div>
					</div>	
				<%end%>
		<%end%>
		<br>
		
		<div class="button">
			<p><%= link_to 'Show', @picture, :class => 'btn btn-block' %></p>
		</div>

		<div class="button">
			<p><%= link_to 'Back', pictures_path, :class => 'btn btn-block' %></p>
		</div>	
	</div>
</div>