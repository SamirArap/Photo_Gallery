<div class="container">
	<div class="jumbotron">
		<h2>New Picture</h2>

		<%= form_for @picture do |f|%>
		
			<%= render(:partial => 'form', :locals => {:f => f}) %>

				<div class="row">
					<div class="col-md-2"></div>				
					<div class="col-md-10"><%= f.submit "Add new", :class => 'btn btn-block' %></div>
				</div>
			
		<%end%>
		<br>
		<div class="button">
			<p><%= link_to 'Back', pictures_path, :class => 'btn btn-block' %></p>
		</div>
	</div>
</div>
