<div class="container">
	<div class="jumbotron">
		<div class="center">

			<div class="boxx">
				<div class="box">
					<%= image_tag(@picture.image.url, size: '400x400') %>
				</div>
				<div class="box">
					<div class="row">
						<div class="col-sm-4">Title:</div>
						<div class="col-sm-4"><h2><%= @picture.title %></h2></div>
					</div>
					<div class="row">
						<div class="col-sm-4">Cycle:</div>
						<div class="col-sm-4"><h2><%= @picture.cycle %></h2></div>
					</div>	
					<div class="row">
						<div class="col-sm-4">Price:</div>
						<div class="col-sm-4"><h2><%= number_to_currency(@picture.price, :locale => :eu) %></h2></div>
					</div>
				</div>	
			</div>
			
			<% if @picture.user == current_user%>
				<div class="button">
					<p><%= link_to 'Edit', edit_picture_path(@picture), :class => 'btn btn-block' %></p>
				</div>
			<%end%>
			<div class="button">
				<p><%= link_to 'Back', pictures_path, :class => 'btn btn-block' %></p>
			</div>
			
		</div>
	</div>
</div>